@{
}

@if (TempData["ProductOrder"] != null)
{

<table class="table-responsive">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in TempData["ProductOrder"] as List<Gitline.Models.ProductOrder>)
        {
        <tr>
            <td>@item.ProductOrderID</td>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@item.Total</td>
        </tr>
        }

    </tbody>
</table>


}
else
{
    <h2>Your Cart is empty</h2>
    @Html.ActionLink("Back","Index","Home")
}
