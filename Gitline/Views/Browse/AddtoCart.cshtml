@using (Html.BeginForm())
{


<h1>Add to cart</h1>

<div class="container">
    <div class="row">

        <div class="col-lg-4 col-md-4 col-sm-4">

            <img style="min-height:200px; width:200px" src="~/img/inventory/@Url.Content(Model.ImagePath)" />
        </div>

        <div class="col-lg-8 col-md-8 col-sm-8">
            <h1>Product Name:@Model.Name</h1>
            <h1>Price: @Model.Price</h1>
            <h1>Description: @Model.Description</h1>

            <input type="number" name="qty" value="0" id="qty" />
            <input type="submit" class="btn btn-danger" value="Submit" />
        </div>


    </div>
</div>
}