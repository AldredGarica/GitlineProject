@model Gitline.Models.Order


@{
    ViewData["Title"] = "Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>CheckOut</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckOut" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="OrderUser" class="control-label">User</label>
                <input asp-for="OrderUser" class="form-control" />
                <span asp-validation-for="OrderUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderAddress" class="control-label">Address</label>
                <input asp-for="OrderAddress" class="form-control" />
                <span asp-validation-for="OrderAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderCity" class="control-label">City</label>
                <input asp-for="OrderCity" class="form-control" />
                <span asp-validation-for="OrderCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderZip" class="control-label">Zip Code</label>
                <input asp-for="OrderZip" class="form-control" />
                <span asp-validation-for="OrderZip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderEmail" class="control-label">Email</label>
                <input asp-for="OrderEmail" class="form-control"></input>
                <span asp-validation-for="OrderEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderPhone" class="control-label">Mobile No.</label>
                <input asp-for="OrderPhone" class="form-control" />
                <span asp-validation-for="OrderPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm Order" class="btn bg-primary" />
            </div>
        </form>
    </div>
</div>
